      <a href="/" class="text-background">
        <Logo />
      </a>
      <ul
        class="flex flex-wrap items-center justify-between mt-4 mb-6 lg:mt-0 text-sm font-medium text-zinc-500 sm:mb-0"
      >
        <li>
