---
import SkillCard from "./SkillCard.astro";
import { Marquee } from "@/components/ui/marquee";
import { useTranslation, getLangFromUrl } from "@/i18n/utils";
import { skills } from "./skills-data";
const firstRow = skills.slice(0, skills.length / 2);
const secondRow = skills.slice(skills.length / 2);

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);
---

<section class="flex flex-col mt-[5.75rem] w-full items-center" id="skills">
  <div
    class="relative flex h-full w-full flex-col items-center justify-center overflow-hidden rounded-lg border bg-background py-20 md:shadow-xl"
  >
    <div class="mb-10">
      <p class="lg:text-5xl text-4xl text-foreground inline">
        {t("skills.my")}
        <p class="lg:text-5xl text-4xl font-extrabold inline">
          {t("skills.skills")}
        </p>
      </p>
    </div>
    <Marquee pauseOnHover className="[--duration:20s]">
      {firstRow.map((skill) => <SkillCard {...skill} />)}
    </Marquee>
    <Marquee reverse pauseOnHover className="[--duration:20s]">
      {secondRow.map((skill) => <SkillCard {...skill} />)}
    </Marquee>
    <div
      class="pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r from-background"
    >
    </div>
    <div
      class="pointer-events-none absolute inset-y-0 right-0 w-1/3 bg-gradient-to-l from-background"
    >
    </div>
  </div>
</section>
