---
import SkillCard from "./SkillCard.astro";

import { skills } from "./skills-data";
---

<section class="flex flex-col mt-[5.75rem] w-full items-center" id="skills">
  <div class="mt-10">
    <p class="text-5xl text-foreground inline">
      My
      <p class="text-5xl font-extrabold inline">Skills</p>
    </p>
  </div>

  <div class="grid lg:grid-cols-5 lg:gap-16 lg:mt-20 mt-10 grid-cols-2 gap-5">
    {skills.map((skill) => <SkillCard {...skill} />)}
  </div>
</section>
