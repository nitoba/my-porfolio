---
export interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center lg:size-[11.625rem] size-[6rem] relative lg:gap-8 rounded bg-background border-2 border-foreground group/skill hover:bg-foreground cursor-pointer transition-colors duration-300"
>
  <img
    src={icon}
    alt=""
    class="lg:size-14 size-6 group-hover/skill:invert dark:group-hover/skill:invert-0 dark:invert"
  />
  <p
    class="lg:text-xl font-bold text-center capitalize text-foreground group-hover/skill:text-background"
  >
    {title}
  </p>
</div>
