---
export interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center lg:size-[11.625rem] size-[10rem] relative gap-8 rounded bg-background border-2 border-foreground group hover:bg-foreground cursor-pointer transition-colors duration-300"
>
  <img
    src={icon}
    alt=""
    class="size-14 group-hover:invert dark:group-hover:invert-0 dark:invert"
  />
  <p
    class="text-xl font-bold text-center capitalize text-foreground group-hover:text-background"
  >
    {title}
  </p>
</div>
